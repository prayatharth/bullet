<!-- 
            //////////////////////////////////////////////////// -->
    <div class="container-xxl py-5 bg-dark hero-header mb-5">
        <div class="container text-center my-5 pt-5 pb-4">
            <h1 class="display-3 text-white mb-3 animated slideInDown">Food Menu</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb justify-content-center text-uppercase">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item"><a href="#">Pages</a></li>
                    <li class="breadcrumb-item text-white active" aria-current="page">Menu</li>
                </ol>
            </nav>
        </div>
    </div>
    </div>
    <!-- Navbar & Hero End -->


    <!-- Menu Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h5 class="section-title ff-secondary text-center text-primary fw-normal">Food Menu</h5>
                <h1 class="mb-5">Most Popular Items</h1>
            </div>
            <div class="tab-class text-center wow fadeInUp" data-wow-delay="0.1s">
                <ul class="nav nav-pills d-inline-flex justify-content-center border-bottom mb-5">
                    <li class="nav-item">
                        <a class="d-flex align-items-center text-start mx-3 ms-0 pb-3 active" data-bs-toggle="pill"
                            href="#tab-1">
                            <i class="fa fa-coffee fa-2x text-primary"></i>
                            <div class="ps-3">
                                <small class="text-body">Popular</small>
                                <h6 class="mt-n1 mb-0">Our Menu</h6>
                            </div>
                        </a>
                    </li>

                </ul>


                <div class="tab-content">
                    <div id="tab-1" class="tab-pane fade show p-0 active">

                        <div>

                            <div class="col-lg-12">
                                <form method="post" action="/menu">
                                    <table border="2" align="center">
                                        <thead>
                                            <tr>

                                                <th>
                                                    <h3><strong>ITEM</strong></h3>
                                                </th>
                                                <th>
                                                    <h3><strong>Half</strong></h3>
                                                </th>
                                                <th>
                                                    <h3><strong>Quantity</strong></h3>
                                                </th>
                                               
                                                <th>
                                                    <h3><strong>Full</strong></h3>
                                                </th>
                                                
                                                <th>
                                                    <h3><strong>Quantity</strong></h3>
                                                </th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <%for(r in newItem){%>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <img class="flex-shrink-0 img-fluid rounded"
                                                                src="<%=newItem[r].image%>" alt="" style="width: 80px;">

                                                            <div class="w-100 d-flex flex-column text-start ps-4">
                                                                <h5
                                                                    class="d-flex justify-content-between border-bottom pb-4">
                                                                    <span >
                                                                        <%=newItem[r].name%>
                                                                    </span>
                                                                </h5>
                                                            </div> 
                                                            <!-- <small class="fst-italic" align="left" ><%=newItem[r].description%></small>      -->
                                                    </td>
                                                    <td style="padding: 2.5rem;">
                                                        <h5> <span class="text-primary justify-content-center">
                                                                <% if(newItem[r].prices[0].Half!=0){%>
                                                                    <%=newItem[r].prices[0].Half%>
                                                                        <%}%>
                                                            </span> </h5>

                                                    </td>
                                                    <% if(newItem[r].prices[0].Half!=0){%>
                                                        <td style="padding: 3.5rem;">
                                                            <input type="number" id="quantity" name=<%=newItem[r].Type%> min="0"
                                                                max="5">
                                                        </td>
                                                            <%}else{%>
                                                                <td></td>
                                                                <%}%>
                                                    

                                                    <td style="padding: 2.5rem;">
                                                        <h5 > <span class="text-primary">
                                                                <%=newItem[r].prices[0].Full%>
                                                            </span> </h5>

                                                    </td>
                                                    
                                                    <td style="padding: 3.5rem;">
                                                        <input type="number" id="quantity" name=<%=newItem[r].Type%> min="0"
                                                            max="5">
                                                    </td>

                                            </tr>
                                            <%}%>


                                        </tbody>

                                    </table>
                                

                                <!-- <h2>TOTAL BILL : <%=tot%> </h2> -->
                                <br>
                                <button type="submit"  name="confirm" ><h4>CONFIRM</h4></button>
                            </form>


                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
    </div>
    <!-- Menu End -->


    <%-include('foot');-%>